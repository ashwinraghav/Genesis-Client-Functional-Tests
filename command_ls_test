TEST_DIR = "ls_test"
TEST_PATH = "$(MOUNTED_HOME)/$(TEST_DIR)"
clean:
	echo "The test dir is $(MOUNTED_HOME)"
	rm -rf $(TEST_PATH)
	rm -rf answer output

bootstrap: clean
	mkdir $(TEST_PATH)
	touch $(TEST_PATH)/1
	touch $(TEST_PATH)/2
	touch $(TEST_PATH)/3
	touch $(TEST_PATH)/4
	touch $(TEST_PATH)/5
	pwd
answer:
	echo $(TEST_DIR)':\n1\n2\n3\n4\n5'>answer

test: bootstrap answer
	../grid ls $(TEST_DIR) > output
